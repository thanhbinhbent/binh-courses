// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?   // Hashed password
  image         String?
  globalRoles   GlobalRole[] @default([USER])  // User can have multiple global roles
  bio           String?   @db.Text
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth relations
  accounts      Account[]
  sessions      Session[]

  // Application relations
  ownedCourses  Course[]  @relation("CourseOwner")
  enrollments   Enrollment[]
  purchases     Purchase[]
  reviews       Review[]
  certificates  Certificate[]
  progress      Progress[]
  lessonProgress LessonProgress[] // Add this relation
  comments      Comment[]
  quizzes       Quiz[]    @relation("QuizCreator")
  quizAttempts  QuizAttempt[]
  courseRoles   CourseRole[] // Course-specific role assignments
  assignedRoles CourseRole[] @relation("RoleAssigner") // Roles this user has assigned to others

  @@index([email])
}

// NextAuth models
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum GlobalRole {
  SYSTEM_ADMIN  // Full system administration access - can manage all courses and assign any roles
  USER          // Regular user - can create courses and enroll in courses
}

enum CourseRoleType {
  INSTRUCTOR        // Primary instructor - can manage all course content
  TEACHING_ASSISTANT // Assistant instructor with limited permissions
  STUDENT           // Course participant/learner
}

enum CoursePermission {
  MANAGE_COURSE     // Edit course settings, description, etc.
  MANAGE_CONTENT    // Create/edit chapters, lessons, quizzes
  MANAGE_USERS      // Assign roles, enroll/remove students
  GRADE_ASSIGNMENTS // Grade quizzes and assignments
  VIEW_ANALYTICS    // View course analytics and reports
  MODERATE_COMMENTS // Moderate course comments and discussions
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String   @unique
  courses   Course[]
  quizzes   Quiz[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
}

model Course {
  id          String   @id @default(uuid())
  title       String   @db.Text
  description String?  @db.Text
  imageUrl    String?  @db.Text
  price       Float?
  isPublished Boolean  @default(false)
  level       CourseLevel @default(BEGINNER)
  
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  ownerId      String   // Course creator/owner
  owner        User     @relation("CourseOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  chapters    Chapter[]
  attachments Attachment[]
  enrollments Enrollment[]
  purchases   Purchase[]
  reviews     Review[]
  courseRoles CourseRole[] // Role assignments for this course

  @@index([categoryId])
  @@index([ownerId])
  @@index([isPublished])
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

model Chapter {
  id          String   @id @default(uuid())
  title       String
  description String?  @db.Text
  position    Int
  isPublished Boolean  @default(false)
  isFree      Boolean  @default(false)
  
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  lessons     Lesson[]
  userProgress Progress[]
  resources    Resource[]
  quizzes      Quiz[]
  comments     Comment[]

  @@index([courseId])
  @@index([position])
}

enum LessonType {
  VIDEO
  ARTICLE
  QUIZ
  EXERCISE
}

model Lesson {
  id          String   @id @default(uuid())
  title       String
  description String?  @db.Text
  type        LessonType @default(VIDEO)
  videoUrl    String?  @db.Text
  content     String?  @db.Text  // For ARTICLE type lessons
  position    Int
  duration    Int?     // in seconds
  isPublished Boolean  @default(false)
  isFree      Boolean  @default(false)
  
  chapterId   String
  chapter     Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  
  // Relations
  progress    LessonProgress[]
  resources   Resource[]
  quizzes     Quiz[]
  comments    Comment[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([chapterId])
  @@index([position])
}

model LessonProgress {
  id          String   @id @default(uuid())
  isCompleted Boolean  @default(false)
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  lessonId    String
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, lessonId])
  @@index([userId])
  @@index([lessonId])
}

model Attachment {
  id        String   @id @default(uuid())
  name      String
  url       String   @db.Text
  
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@index([courseId])
}

model Resource {
  id        String   @id @default(uuid())
  name      String
  url       String   @db.Text
  type      ResourceType
  
  chapterId String?
  chapter   Chapter? @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  
  lessonId  String?
  lesson    Lesson?  @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@index([chapterId])
  @@index([lessonId])
}

enum ResourceType {
  PDF
  VIDEO
  LINK
  DOCUMENT
}

// Default permissions for each role type (can be customized per course)
model RolePermissionTemplate {
  id          String   @id @default(uuid())
  roleType    CourseRoleType
  permission  CoursePermission
  isDefault   Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  
  @@unique([roleType, permission])
  @@index([roleType])
}

model CourseRole {
  id          String   @id @default(uuid())
  role        CourseRoleType
  permissions CoursePermission[] // Specific permissions for this role assignment
  isActive    Boolean  @default(true) // Can temporarily disable role without deleting
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  assignedAt  DateTime @default(now())
  assignedBy  String?  // ID of user who assigned this role (for auditing)
  assignedByUser User? @relation("RoleAssigner", fields: [assignedBy], references: [id], onDelete: SetNull)
  
  expiresAt   DateTime? // Optional role expiration
  
  @@unique([userId, courseId, role]) // A user can have multiple roles in same course
  @@index([userId])
  @@index([courseId])
  @@index([role])
  @@index([isActive])
}

model Enrollment {
  id        String   @id @default(uuid())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

model Progress {
  id          String   @id @default(uuid())
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  chapterId   String
  chapter     Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  
  isCompleted Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, chapterId])
  @@index([userId])
  @@index([chapterId])
}

model Purchase {
  id        String   @id @default(uuid())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  amount    Float
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?  @db.Text
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
  @@index([rating])
}

model Certificate {
  id            String   @id @default(uuid())
  certificateId String   @unique
  
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  courseName     String
  ownerName      String
  completionDate DateTime
  
  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([certificateId])
}

model Quiz {
  id          String   @id @default(uuid())
  title       String
  description String?  @db.Text
  passingScore Int     @default(70)
  timeLimit   Int?     // in minutes
  isPublished Boolean  @default(false)
  
  // Quiz can be standalone (for practice) or part of a chapter/lesson
  chapterId   String?
  chapter     Chapter? @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  
  lessonId    String?
  lesson      Lesson?  @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  // For standalone quizzes
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  creatorId   String   // Quiz creator
  creator     User     @relation("QuizCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  questions   Question[]
  attempts    QuizAttempt[]

  @@index([chapterId])
  @@index([lessonId])
  @@index([categoryId])
  @@index([creatorId])
}

model Question {
  id            String   @id @default(uuid())
  question      String   @db.Text
  type          QuestionType
  points        Int      @default(1)
  order         Int
  
  quizId        String
  quiz          Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  options       QuestionOption[]
  answers       Answer[]

  @@index([quizId])
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  SHORT_ANSWER
  ESSAY
}

model QuestionOption {
  id          String   @id @default(uuid())
  text        String   @db.Text
  isCorrect   Boolean  @default(false)
  order       Int
  
  questionId  String
  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@index([questionId])
}

model QuizAttempt {
  id          String   @id @default(uuid())
  score       Float?
  isPassed    Boolean  @default(false)
  startedAt   DateTime @default(now())
  completedAt DateTime?
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  quizId      String
  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  
  // Relations
  answers     Answer[]

  @@index([userId])
  @@index([quizId])
}

model Answer {
  id            String   @id @default(uuid())
  answer        String   @db.Text
  isCorrect     Boolean?
  points        Float    @default(0)
  
  attemptId     String
  attempt       QuizAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  
  questionId    String
  question      Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime @default(now())

  @@index([attemptId])
  @@index([questionId])
}

model Comment {
  id        String   @id @default(uuid())
  content   String   @db.Text
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  chapterId String?
  chapter   Chapter? @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  
  lessonId  String?
  lesson    Lesson?  @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  parentId  String?
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([chapterId])
  @@index([lessonId])
  @@index([parentId])
}
