# Binh Courses - Environment Variables
# Copy this file to .env.local and adjust values

# Database (Required)
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/modern_lms"

# NextAuth.js (Required)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this"

# Redis Configuration (Optional - for caching)
# REDIS_URL=redis://redis123@localhost:6379

# External Services (Development)
CLERK_SECRET_KEY=your-clerk-secret-key
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key

# Stripe (Test mode)
STRIPE_SECRET_KEY=sk_test_your-stripe-test-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-publishable-key

# UploadThing (Development)
UPLOADTHING_SECRET=your-uploadthing-secret
UPLOADTHING_APP_ID=your-uploadthing-app-id

# Mux (Development)
MUX_TOKEN_ID=your-mux-token-id
MUX_TOKEN_SECRET=your-mux-token-secret

# Development Settings
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1